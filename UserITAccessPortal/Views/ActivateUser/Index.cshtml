@model VigoBAS_Start.Models.ActivateUserModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="page">

        <div class="row">
            <div class="col-lg-offset-3 col-md-offset-3 col-lg-6 col-md-6">
                <h1>Aktiver brukerkonto</h1>
                <p>
                    Her kan du aktivere brukerkontoen din slik at du kan bruke IT-tjenestene. Fyll ut feltene under med brukernavn og aktiveringskode du fikk på SMS.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-offset-4 col-md-offset-3 col-lg-4 col-md-6">
                <div class="form">

                    @using (Html.BeginForm("ValidateUserAndCode", "ActivateUser", FormMethod.Post))
                    {

                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { Class = "form__validation-summary" })

                        @Html.LabelFor(m => m.Username)
                        <br />
                        @Html.TextBoxFor(m => m.Username, new { placeholder = "Skriv inn brukernavn" })
                        @Html.ValidationMessageFor(m => m.Username)

                        <br />
                        <br />
                        @Html.LabelFor(m => m.Code)
                        <br />
                        @Html.TextBoxFor(m => m.Code, new { placeholder = "Skriv inn aktiveringskode" })
                        @Html.ValidationMessageFor(m => m.Code)

                        <div class="row">
                            <div class="col-lg-offset-6 col-md-offset-6 col-sm-offset-6 col-xs-offset-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <input type="submit" value="Gå videre" name="" />
                            </div>
                        </div>

                    }

                </div>

            </div>
        </div>

        <br />
        <br />
        <br /><br />
        <br />
        <br />

        <div class="row">
            <div class="col-lg-offset-3 col-md-offset-2 col-lg-6 col-md-8">
                <p>
                    <strong><small>Har du problemer med å logge deg inn?</small></strong>
                </p>
                <p>
                    <small>Hvis du har problemer med innloggingen kan du prøve å klippe og lime aktiveringskode og/eller brukernavn.</small>
                </p>
                <p>
                    <small>
                        Hvis du fortsatt har problemer med påloggingen, ta kontakt med nærmeste IT-avdeling.
                    </small>
                </p>
            </div>
        </div>

    </section>