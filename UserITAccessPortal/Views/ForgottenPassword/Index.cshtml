@model VigoBAS_Start.Models.ForgottenPasswordModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page">
    <div class="row">
        <div class="col-lg-offset-3 col-md-offset-3 col-lg-6 col-md-6">
            <h1>Glemt passord</h1>
            <p>
                Har du glemt passordet ditt? Skriv inn brukernavnet ditt
                her for å motta en engangskode på SMS slik at du kan endre det.
            </p>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
            <div style="margin: 0 auto; text-align: center;">
                <ul class="progressbar">
                    <li class="active">Skriv inn brukernavn</li>
                    <li>Skriv inn engangskode</li>
                    <li>Lag nytt passord</li>
                </ul>
            </div>
        </div>
    </div>
    <br class="hidden-sm hidden-xs" />
    <br class="hidden-sm hidden-xs" />
    <div class="row">
        <div class="col-lg-offset-4 col-md-offset-3 col-lg-4 col-md-6">
            <div class="form">

                @using (Html.BeginForm("SendCode", "ForgottenPassword"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { Class = "form__validation-summary" })
                    @Html.LabelFor(m => m.Username) <a class="label__link" href="/ForgottenUsername">(Glemt?)</a>
                    <br />
                    @Html.TextBoxFor(m => m.Username, new { placeholder = "Skriv inn brukernavn" })
                    @Html.ValidationMessageFor(m => m.Username)

                    if (Model.ShowPersonalNumberField)
                    {
                        @Html.LabelFor(m => m.PersonalNumber) 
                        <br />
                        @Html.TextBoxFor(m => m.PersonalNumber, new { placeholder = "Skriv inn ditt fødselsnummer" })
                        @Html.ValidationMessageFor(m => m.PersonalNumber)
                    }

                    if (Model.ShowPhoneNumberField)
                    {
                        @Html.LabelFor(m => m.PhoneNumber)
                        <br />
                        @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Skriv inn ditt telefonnummer" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber)
                    }


                    <div class="row">
                        <div class="col-lg-offset-6 col-md-offset-6 col-sm-offset-6 col-xs-offset-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <input type="submit" value="Send engangskode" name="" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</section>


