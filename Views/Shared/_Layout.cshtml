<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
</head>

<body>
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-5 col-xs-8">
                <div class="logo">
                    <a class="logo__link" href="/">
                        <div class="logo__image logo__image--county"></div>
                    </a>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-7 col-xs-4">
                <button class="navigation__icon"></button>
                <nav class="navigation">
                    <a class="navigation__link" href="@Url.Action("Index", "ActivateUser")">Aktiver brukerkonto</a>
                    <a class="navigation__link" href="@Url.Action("Index", "ForgottenPassword")">Glemt passord</a>
                    <a class="navigation__link" href="@Url.Action("Index", "ForgottenUsername")">Glemt brukernavn</a>
                </nav>
            </div>
        </div>
    </div>
</header>
    
    <nav class="mobile-menu">
        <a class="mobile-menu__link mobile-menu__link--user" href="@Url.Action("Index", "ActivateUser")">Aktiver brukerkonto</a>
        <a class="mobile-menu__link mobile-menu__link--key" href="@Url.Action("Index", "ForgottenPassword")">Glemt passord</a>
        <a class="mobile-menu__link mobile-menu__link--info" href="@Url.Action("Index", "ForgottenUsername")">Glemt brukernavn</a>        
    </nav>

<section class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>

        </div>
    </section>

    <footer class="footer"></footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        var path = window.location.pathname;
        
        $('.navigation__link').each(function () {
            var hrefAttribute = $(this).attr('href');

            if (path.indexOf(hrefAttribute) !== -1) {
                $(this).addClass("navigation__link--selected");
                $(this).siblings().removeClass("navigation__link--selected");
            }
        });

        $('.navigation__icon').click(function() {
            $('.mobile-menu').slideToggle();
        });

    </script>
</body>
</html>
