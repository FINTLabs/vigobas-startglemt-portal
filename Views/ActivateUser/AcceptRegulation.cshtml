@model VigoBAS_Start.Models.ActivateUserModel

@{
    ViewBag.Title = "AcceptRegulation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page">

    <div class="row">
        <div class="col-lg-offset-3 col-md-offset-3 col-lg-6 col-md-6">
            <h1>Aktiver brukerkonto</h1>
        </div>
    </div>


    @Html.Partial("_ProgressList", Model)

    <div class="row">
        <div class="col-lg-offset-4 col-md-offset-3 col-lg-4 col-md-6">
            <p>
                Du må ha lest og akseptert <a target="_blank" href="@ViewBag.ITRegulationUrl">It-reglement</a> for å aktivere brukerkonto.
            </p>
            <div class="form">

                @using (Html.BeginForm("AcceptRegulation", "ActivateUser"))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Username)
                    @Html.HiddenFor(m => m.Code)
                    @Html.ValidationSummary(true, "", new { Class = "form__validation-summary" })

                    <div class="row">
                        <div class="col-lg-12">

                            <label class="checkbox-label">
                                <span class="checkbox-label__input">
                                    @Html.CheckBoxFor(m => m.AcceptedRegulation)
                                </span>
                                <span class="checkbox-label__text">
                                    @Html.DisplayNameFor(m => m.AcceptedRegulation)
                                </span>
                            </label>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.AcceptedRegulation)

                    <div class="row">
                        <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-3 col-xs-offset-3 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <input type="submit" value="Gå videre" name="" />
                        </div>
                    </div>

                }

            </div>

        </div>
    </div>

</section>